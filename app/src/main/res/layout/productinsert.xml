<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView9"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@+id/name"
        android:layout_toStartOf="@+id/name"
        android:text="Product Name" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="41dp"
        android:layout_toLeftOf="@+id/productid"
        android:layout_toStartOf="@+id/productid"
        android:text="Product ID" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="37dp"
        android:id="@+id/name"
        android:hint="Name" />

    <EditText
        android:id="@+id/productid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/name"
        android:layout_alignRight="@+id/name"
        android:layout_below="@+id/name"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/aprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/productid"
        android:layout_alignRight="@+id/productid"
        android:layout_below="@+id/productid"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:inputType="textAutoCorrect|number" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/aprice"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@+id/aprice"
        android:layout_toStartOf="@+id/aprice"
        android:text="Actual Price" />

    <Button
        android:id="@+id/insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aprice"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/aprice"
        android:layout_marginBottom="65dp"
        android:text="INSERT" />

    <EditText
        android:id="@+id/sprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aprice"
        android:layout_alignStart="@+id/aprice"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_centerVertical="true"
        android:text="Selling Price" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/sprice"
        android:layout_marginTop="42dp"
        android:text="Image" />


</RelativeLayout>